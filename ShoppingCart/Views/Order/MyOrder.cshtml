@model IEnumerable<ShoppingCart.Models.Cart.Order>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Order List</h2>

<p></p>

<table class="table table-hover table-striped ">
    <tr>
        <th>Order Number</th>
        <th>Member Name</th>
        <th>Receiver Name</th>
        <th>Receiver Phone</th>
        <th>Receiver Address</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecieverName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecieverPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecieverAddress)
            </td>
            <td>
                @Html.ActionLink("Order Detail", "MyOrderDetail", new { pId = item.Id }
                 , new { @class = "btn btn-primary" })
            </td>
        </tr>
    }
</table>

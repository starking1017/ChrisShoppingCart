@model IEnumerable<ShoppingCart.Models.Cart.Order>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Order List</h2>

@using (Html.BeginForm("SerachByUserName", "ManageOrder"))
{
    <div class="input-group add-on form-group col-sm-3 col-md-3 col-lg-3">
        <input class="form-control" placeholder="Search name..." name="pSearch" id="search" type="text" value="@Context.Request.Query["search"]">
        <div class="input-group-btn">
            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
        </div>
    </div>
}

<p></p>

<table class="table table-hover table-striped ">
    <tr>
        <th>Order Number</th>
        <th>Member Name</th>
        <th>Receiver Name</th>
        <th>Receiver Phone</th>
        <th>Receiver Address</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecieverName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecieverPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecieverAddress)
            </td>
            <td>
                @Html.ActionLink("Order Detail", "Details", new { pId = item.Id }
                 , new { @class = "btn btn-primary" })
            </td>
        </tr>
    }
</table>

